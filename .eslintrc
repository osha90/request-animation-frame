{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": { "mocha": true, "jest": true },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "standard"
  ],
  "rules": {
    "curly": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "named": "never"
      }
    ],
    "no-use-before-define": "off",
    "arrow-parens": ["error", "as-needed"]
  }
}
